-- âš¡ Teleport Brutal CFrame + Delay 1 Detik per Checkpoint + Auto Teleport + UI Modern (tanpa flag)

local Players = game:GetService("Players")
local StarterGui = game:GetService("StarterGui")
local TeleportService = game:GetService("TeleportService")
local player = Players.LocalPlayer

-- Daftar titik teleport
local teleportPoints = {
    Vector3.new(626.02, 1799.41, 3433.20),  -- Titik 1
    Vector3.new(805.25, 2142.93, 3910.33)   -- Titik 2
}

local teleportEnabled = false
local lastCheckpoint = 1
local currentServer = game.JobId

-- Fungsi teleport ke titik terakhir
local function teleportToPoints()
    local character = player.Character or player.CharacterAdded:Wait()
    local humanoidRootPart = character:WaitForChild("HumanoidRootPart")
    while teleportEnabled and humanoidRootPart do
        for i = lastCheckpoint, #teleportPoints do
            if not teleportEnabled then break end
            humanoidRootPart.CFrame = CFrame.new(teleportPoints[i])
            lastCheckpoint = i
            StarterGui:SetCore("SendNotification", {
                Title = "Auto Summit",
                Text = "Checkpoint "..i.." tercapai! Server ID: "..currentServer,
                Duration = 3
            })
            -- Delay 1 detik tiap checkpoint
            task.wait(1)
            -- Jika titik terakhir, teleport ke server baru
            if i == #teleportPoints then
                task.wait(1)
                TeleportService:Teleport(game.PlaceId, player)
            end
        end
        task.wait()
    end
end

-- Auto teleport saat respawn
player.CharacterAdded:Connect(function()
    if teleportEnabled then
        task.spawn(teleportToPoints)
    end
end)

-- UI Modern
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "TeleportUI"
screenGui.ResetOnSpawn = false
screenGui.Parent = player:WaitForChild("PlayerGui")

local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 220, 0, 120)
mainFrame.Position = UDim2.new(0.5, -110, 0.8, 0)
mainFrame.BackgroundColor3 = Color3.fromRGB(30,30,30)
mainFrame.BorderSizePixel = 0
mainFrame.Parent = screenGui

local toggleButton = Instance.new("TextButton")
toggleButton.Size = UDim2.new(1, -20, 0, 60)
toggleButton.Position = UDim2.new(0, 10, 0, 30)
toggleButton.BackgroundColor3 = Color3.fromRGB(255,0,0)
toggleButton.TextColor3 = Color3.new(1,1,1)
toggleButton.Text = "Teleport OFF"
toggleButton.Parent = mainFrame

toggleButton.MouseButton1Click:Connect(function()
    teleportEnabled = not teleportEnabled
    toggleButton.Text = teleportEnabled and "Teleport ON" or "Teleport OFF"
    toggleButton.BackgroundColor3 = teleportEnabled and Color3.fromRGB(0,255,0) or Color3.fromRGB(255,0,0)
    if teleportEnabled then
        task.spawn(teleportToPoints)
        StarterGui:SetCore("SendNotification", {
            Title = "Auto Summit",
            Text = "Teleport aktif! Server ID: "..currentServer,
            Duration = 3
        })
    end
end)
